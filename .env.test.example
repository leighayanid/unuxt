# ===========================================
# Test Environment Configuration
# ===========================================
#
# Copy this file to .env.test for running tests
# This file is used by Vitest and Playwright tests
#
# ===========================================

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATABASE (Test)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Use a separate test database to avoid affecting development data
DATABASE_URL=postgresql://postgres:password@localhost:5432/unuxt_test

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AUTHENTICATION (Test)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Use a different secret for testing
BETTER_AUTH_SECRET=test-secret-key-min-32-characters-long-for-testing-only

# Test URL (adjust port if running tests on different port)
BETTER_AUTH_URL=http://localhost:3000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OPTIONAL SERVICES (Test)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# OAuth - Usually not needed for tests (use mocks instead)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Cloudinary - Usually not needed for tests (use mocks instead)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email - Tests will use console logging by default
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=test@example.com
FROM_NAME=Unuxt Test

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# APPLICATION SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

NODE_ENV=test

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# TEST SETUP NOTES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# 1. Create test database:
#    createdb unuxt_test
#
# 2. Run migrations on test database:
#    pnpm db:push
#
# 3. Run tests:
#    pnpm test
#
# 4. Run E2E tests:
#    pnpm --filter @unuxt/web test:e2e
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
